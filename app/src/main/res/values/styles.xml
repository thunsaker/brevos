<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Brevos" parent="Theme.Brevos.Base" />

    <style name="Theme.Brevos.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--<style name="Theme.Brevos.Light" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <!--<item name="colorAccent">@color/accent</item>-->
    <!--</style>-->

    <style name="Theme.Brevos.Bitly" parent="Theme.Brevos">
        <item name="colorPrimary">@color/bitly</item>
        <item name="colorPrimaryDark">@color/bitly_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.Brevos.Accent" parent="Theme.Brevos">
        <item name="colorPrimary">@color/brevos_pink</item>
        <item name="colorPrimaryDark">@color/brevos_pink_dark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.Brevos.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.Brevos.Transparent.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BrevosDarkOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <style name="SearchViewTheme" parent="BrevosDarkOverlay">
        <!--<item name="colorControlActivated">?android:colorAccent</item>-->
        <item name="colorControlActivated">@android:color/black</item>
        <item name="searchViewStyle">@style/Widget.Brevos.SearchView</item>
    </style>

    <style name="Widget.Brevos.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <!--<item name="queryBackground">@android:color/transparent</item>-->
        <!--<item name="submitBackground">@android:color/transparent</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="Widget.Brevos.EditText" parent="android:style/Widget.Material.EditText">
        <item name="colorControlActivated">@android:color/white</item>
    </style>
</resources>